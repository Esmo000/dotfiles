#!/bin/bash

menu=$(echo -e "firefox\nchromium\ncopy to clipboard\nplay" | dmenu -p browser)

case $menu in
    "firefox")
        firefox "$@" &
        ;;
    "chromium")
        chromium "$@" &
        ;;
    "copy to clipboard")
        echo "$@" | wl-copy
        ;;
    "play")
        mpv "$@" &
        ;;
esac
